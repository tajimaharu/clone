<div class="container-fluid">
  <div class="row">
    <div class="left-bar col-md-2">
      <h3>twitterクローン</h3>
      <h4>トップ</h4>
      <h4>投稿</h4>
      <h4>プロフィール</h4>
    </div>
    <div class="content col-md-7">
      <%= form_with(model: @clone, local: true) do |form| %>

      <% if @clone.errors.any? %>
      <div id="error_explanation">
        <h2><%= @clone.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @clone.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
        </div>
      <% end %>

      <%= form.label :content %>
      <br>
      <%= form.text_area :content, class: "form-area" %>
      </br>
      <%= form.submit value="Tweet"%>
      <% end %>

      <br>
      <h2>tweet</h2>
      </br>
      <p><%= notice %></p>

      <% @clones.reverse.each do |clone| %>
        <br>
          <td style="white-space:pre-wrap;"><%= clone.content %></td>
          <td><%= link_to "削除", clone_path(clone.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: "btn-top" %></td>
          <td><%= link_to "編集", edit_clone_path(clone.id), class: "btn-top" %></td>
        </br>
      <% end %>

    </div>
    <div class="right-bar col-md-3">
      <h3>広告とかトレンドとか表示されてる場所</h3>
    </div>
  </div>
</div>
